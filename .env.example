# SEO Optimizer SaaS - Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================================
# DJANGO SETTINGS
# ============================================================

# Debug mode (set to False in production)
DEBUG=False

# Secret key for Django (generate a new one for production)
# Keep this secret and don't commit to version control
SECRET_KEY=your-super-secret-key-change-this-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ============================================================
# DATABASE
# ============================================================

# Use SQLite for development (default)
# Uncomment DATABASE_URL for PostgreSQL in production
# DATABASE_URL=postgresql://user:password@localhost/seo_optimizer

# ============================================================
# ANALYSIS SETTINGS
# ============================================================

# Enable AI-powered recommendations (requires API key below)
USE_AI=False

# AI Provider: 'gemini' or 'openai'
AI_PROVIDER=gemini

# Google Gemini API Key (optional)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# OpenAI API Key (optional)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================
# ANALYSIS CONFIGURATION
# ============================================================

# Request timeout in seconds (default: 10)
ANALYSIS_TIMEOUT=10

# Maximum content size in bytes (default: 10MB)
# Max content size in bytes
MAX_CONTENT_SIZE=10485760

# ============================================================
# SECURITY
# ============================================================

# Enable CORS (for development)
CORS_ALLOW_ALL_ORIGINS=False

# Specific CORS origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================
# LOGGING
# ============================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/django.log

# ============================================================
# PERFORMANCE
# ============================================================

# Number of analysis worker threads
WORKER_THREADS=4

# Cache timeout in seconds
CACHE_TIMEOUT=3600

# ============================================================
# EMAIL (for reports delivery - optional)
# ============================================================

# Email backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================================
# SENTRY (error tracking - optional)
# ============================================================

# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
